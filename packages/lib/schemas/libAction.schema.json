{
  "$id": "libAction.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Lib action",
  "description": "A builtin action in the Nordcraft runtime",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "group": {
      "type": "string",
      "enum": [
        "cookies",
        "debugging",
        "events",
        "local_storage",
        "navigation",
        "session_storage",
        "sharing",
        "timers"
      ]
    },
    "arguments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "type": {
            "type": "any"
          },
          "formula": { "$ref": "Formula" },
          "required": ["name", "description", "type"]
        }
      }
    }
  },
  "required": ["name", "description", "group"],
  "additionalProperties": true
}
