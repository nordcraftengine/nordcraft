{
  "name": "@nordcraft/search",
  "description": "Used for searching and reporting linting problems in toddle projects.",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://github.com/nordcraftengine/nordcraft",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nordcraftengine/nordcraft.git",
    "directory": "packages/search"
  },
  "dependencies": {
    "@nordcraft/ssr": "workspace:*",
    "@nordcraft/core": "workspace:*",
    "jsondiffpatch": "0.7.3",
    "postcss": "8.5.6",
    "zod": "4.2.1"
  },
  "scripts": {
    "build": "tsgo",
    "npm-publish": "bun run build && bun publish --access public",
    "typecheck": "tsgo --noEmit",
    "watch": "tsgo -w",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:watch:only": "bun test --watch --only"
  },
  "files": [
    "dist",
    "src"
  ]
}
