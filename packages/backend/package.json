{
  "name": "nordcraft-cloudflare-worker",
  "scripts": {
    "predocker:build": "bun bin/syncStaticAssets.ts",
    "docker:build": "cd ../../ && docker build . -t nordcraft-backend -f packages/backend/Dockerfile",
    "docker:run": "docker run -p 12345:12345 --name nordcraft-backend -e PORT=12345 nordcraft-backend",
    "predev": "bun bin/syncStaticAssets.ts && bunx esbuild --bundle --outdir=dist --platform=node --format=esm src/index.ts",
    "dev": "wrangler dev --no-bundle --port 8989",
    "preview-link": "sh -c 'ln -s \"$1\" ./nordcraft-internal' --",
    "prepreview": "bun bin/syncStaticAssets.ts",
    "preview": "wrangler dev --port 8989 -c preview.wrangler.toml -c ./nordcraft-internal/packages/worker/wrangler.toml -c ./nordcraft-internal/packages/worker-tail/wrangler.toml",
    "predeploy-preview": "bun bin/syncStaticAssets.ts && bunx esbuild --bundle --outdir=dist --platform=node --format=esm src/preview.index.ts",
    "deploy-preview": "wrangler deploy -c preview.wrangler.toml",
    "predeploy": "bun bin/syncStaticAssets.ts && bunx esbuild --bundle --outdir=dist --platform=node --format=esm src/index.ts",
    "deploy": "wrangler deploy --no-bundle",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:watch:only": "bun test --watch --only",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "watch": "tsc --noEmit -w"
  },
  "dependencies": {
    "@nordcraft/core": "workspace:*",
    "@nordcraft/ssr": "workspace:*",
    "hono": "4.9.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20251008.0",
    "@nordcraft/runtime": "workspace:*",
    "@types/node": "24.3.1",
    "wrangler": "4.42.1"
  }
}
